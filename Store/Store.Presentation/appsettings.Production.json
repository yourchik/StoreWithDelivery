{
  "KafkaSettings": {
    "BootstrapServers": "kafka:9092",
    "ClientId": "delivery_app",
    "GroupId": "delivery_app_group",
    "TopicConsume": "delivery_topic",
    "TopicProduce": "store_topic"
  },

  "RabbitMqSettings": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "user",
    "Password": "password",
    "QueueConsume": "delivery_queue",
    "QueueProduce": "store_queue"
  },

  "ConnectionStrings": {
    "Postgres": "Host=postgres;Port=5432;Database=StoreWithDelivery;Username=user;Password=password"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Network" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Tcp",
        "Args": {
          "serverUri": "tcp://logstash:5044"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Information"
    }
  }
}
